<Page x:ConnectionId='1'
    x:Class="Multiclient.pgClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Multiclient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
                               
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBox x:ConnectionId='2' Visibility="{Binding InputVisible}" Name="inputField" Grid.Row="0" Padding="10" Margin="30" BorderBrush="#000" BorderThickness="2" HorizontalAlignment="Stretch" Height="40"                       />
        <Button x:ConnectionId='3' Visibility="{Binding ReconnectVisible}" Name="reconnectButton" Content="Reconnect" Grid.Row="0" Padding="10" Margin="30" HorizontalAlignment="Center" Height="40"                  />

        <TextBox x:ConnectionId='4' IsReadOnly="True" Name="outputField" Grid.Row="1" Padding="10" Margin="30" BorderBrush="#000" BorderThickness="2" HorizontalAlignment="Stretch"/>
    </Grid>
</Page>

