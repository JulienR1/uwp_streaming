<Page
    x:Class="VideoStream.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VideoStream"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel HorizontalAlignment="Center" Grid.Row="0">
            <Button x:ConnectionId='7' Content="Start camera" FontSize="30"                      HorizontalAlignment="Center"/>
            <TextBlock x:ConnectionId='8' x:Name="feedback" Text="feedback" FontSize="30" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Grid.Row="1">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button x:ConnectionId='5' x:Name="btnServer" Content="Server" FontSize="30" Padding="20" Margin="10"                        />
            <Button x:ConnectionId='6' x:Name="btnClient" Content="Client" FontSize="30" Padding="20" Margin="10"                        />
            </StackPanel>
            <Button x:ConnectionId='4' x:Name="btnCameraFrames" Content="Webcam frames" FontSize="30" Padding="20" Margin="10"                              />
        </StackPanel>


        <CaptureElement x:ConnectionId='2' Name="webcamPreview" Stretch="Uniform" Grid.Row="1"/>
        <Image x:ConnectionId='3' x:Name="screenshotPreview" Stretch="Uniform" Grid.Row="2"/>
    </Grid>
</Page>

